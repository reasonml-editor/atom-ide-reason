{
  "name": "ide-reason",
  "main": "./lib/main",
  "private": true,
  "version": "1.1.13",
  "description": "ReasonML/OCaml language support for Atom-IDE.",
  "rls_version": "1.7.8",
  "scripts": {
    "start": "tsc -w",
    "build": "tsc",
    "check-rls": "node ./tools/check-rls.js"
  },
  "pre-commit": [
    "check-rls"
  ],
  "author": {
    "name": "zaaack",
    "email": "zaaack@qq.com",
    "url": "https://github.com/zaaack"
  },
  "homepage": "https://github.com/reasonml-editor/atom-ide-reason",
  "keywords": [
    "ide",
    "reason",
    "reasonml",
    "ocaml",
    "bucklescript",
    "language-server-protocol"
  ],
  "repository": "https://github.com/reasonml-editor/atom-ide-reason",
  "bugs": {
    "url": "https://github.com/reasonml-editor/atom-ide-reason/issues"
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "atom-languageclient": "0.9.6",
    "atom-package-deps": "4.6.2",
    "cjson": "0.5.0",
    "deepmerge": "2.1.0",
    "diff": "3.5.0",
    "fs-extra": "5.0.0",
    "ocaml-language-server": "1.0.35"
  },
  "activationCommands": {
    "atom-workspace": "ide-reason:generate-config"
  },
  "activationHooks": [
    "language-reason:grammar-used",
    "language-ocaml:grammar-used",
    "language-ocaml-fix:grammar-used"
  ],
  "package-deps": [
    "atom-ide-ui:0.7.0",
    "language-reason:0.0.4",
    "language-ocaml:1.9.5"
  ],
  "consumedServices": {
    "linter-indie": {
      "versions": {
        "2.0.0": "consumeLinterV2"
      }
    },
    "atom-ide-busy-signal": {
      "versions": {
        "0.1.0": "consumeBusySignal"
      }
    },
    "datatip": {
      "versions": {
        "0.1.0": "consumeDatatip"
      }
    }
  },
  "providedServices": {
    "autocomplete.provider": {
      "versions": {
        "2.0.0": "provideAutocomplete"
      }
    },
    "code-format.range": {
      "versions": {
        "0.1.0": "provideRangeCodeFormat"
      }
    },
    "code-format.onSave": {
      "versions": {
        "0.1.0": "provideOnSaveCodeFormat"
      }
    },
    "code-highlight": {
      "versions": {
        "0.1.0": "provideCodeHighlight"
      }
    },
    "definitions": {
      "versions": {
        "0.1.0": "provideDefinitions"
      }
    },
    "find-references": {
      "versions": {
        "0.1.0": "provideFindReferences"
      }
    },
    "outline-view": {
      "versions": {
        "0.1.0": "provideOutlines"
      }
    },
    "code-actions": {
      "versions": {
        "0.1.0": "provideCodeActions"
      }
    }
  },
  "devDependencies": {
    "@types/atom": "1.28.0",
    "@types/diff": "^3.5.2",
    "@types/download": "^6.2.2",
    "@types/fs-extra": "5.0.4",
    "@types/node": "10.7.1",
    "download": "^7.1.0",
    "pre-commit": "^1.2.2",
    "typescript": "3.0.1"
  }
}
